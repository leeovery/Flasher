{
  "name": "leeovery/flasher",
  "type": "library",
  "description": "A Laravel package to flash 1 or more messages to session, with the ability to override previous or future messages, and to cap messages so they only appear once per session, hour, day etc.",
  "keywords": [
    "leeovery",
    "flasher"
  ],
  "homepage": "https://github.com/leeovery/flasher",
  "license": "MIT",
  "authors": [
    {
      "name": "Lee Overy",
      "email": "me@leeovery.com",
      "role": "CTO"
    }
  ],
  "require": {
    "illuminate/support": "^5.3|^5.4",
    "illuminate/contracts": "^5.3|^5.4",
    "illuminate/session": "^5.3|^5.4",
    "php": ">=7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "5.*"
  },
  "autoload": {
    "psr-4": {
      "LeeOvery\\Flasher\\": "src"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "LeeOvery\\Flasher\\": "tests"
    }
  },
  "scripts": {
    "test": "phpunit"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  }
}
